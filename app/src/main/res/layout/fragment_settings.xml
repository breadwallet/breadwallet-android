<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:filterTouchesWhenObscured="true"
              android:paddingTop="60dp">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:filterTouchesWhenObscured="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:filterTouchesWhenObscured="true"
                      android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/about"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/chevron"
                    android:filterTouchesWhenObscured="true"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginStart="20dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/recovery_phrase"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/recovery_phrase_label"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/chevron"
                    android:filterTouchesWhenObscured="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginTop="30dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/local_currency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/local_currency"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/three_letters_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="50dp"
                    android:filterTouchesWhenObscured="true"
                    android:text=""
                    android:textColor="@color/dark_blue"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/chevron"
                    android:filterTouchesWhenObscured="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/settings_line_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginStart="20dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/fingerprint_limit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/fingerprint_spend_limit"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size"/>

                <TextView
                    android:id="@+id/fingerprint_limit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="50dp"
                    android:filterTouchesWhenObscured="true"
                    android:textColor="@color/dark_blue"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/chevron"
                    android:filterTouchesWhenObscured="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginTop="30dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/change_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/change_passcode"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/text_size"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginStart="20dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/start_recovery_wallet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/start_recover_another_wallet"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginStart="20dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/rescan_blockchain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/rescan_blockchain"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:filterTouchesWhenObscured="true"
                android:text="@string/settingsall_rescan_instructions"
                android:textColor="@color/gray"
                android:textSize="12sp"/>

            <RelativeLayout
                android:id="@+id/early_access_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/early_access"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="@string/early_access"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/dark_blue"
                    android:textSize="@dimen/text_size"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/early_access_separator2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/advanced_separator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:layout_marginTop="10dp"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

            <RelativeLayout
                android:id="@+id/advanced"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/clickable_layout"
                android:clickable="true"
                android:filterTouchesWhenObscured="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:filterTouchesWhenObscured="true"
                    android:text="advanced"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/chevron"
                    android:filterTouchesWhenObscured="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/advanced_separator2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/gray"
                android:filterTouchesWhenObscured="true"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>