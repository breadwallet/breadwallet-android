<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wallet_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/add_wallet_item_background"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.breadwallet.legacy.presenter.customviews.BaseTextView
        android:id="@+id/add_wallets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:drawablePadding="16dp"
        android:text="@string/TokenList.addTitle"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/mobile_font_book" />

</RelativeLayout>
