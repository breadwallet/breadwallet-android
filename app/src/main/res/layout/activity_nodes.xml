<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_set_pit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra_light_blue_background"
    tools:context="io.digibyte.presenter.activities.SetPinActivity">

    <io.digibyte.presenter.customviews.BRText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginTop="32dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/NodeSelector.title"
        android:textColor="@color/almost_black"
        android:textSize="@dimen/header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <io.digibyte.presenter.customviews.BRText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/NodeSelector.nodeLabel"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <io.digibyte.presenter.customviews.BRText
        android:id="@+id/node_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.3"
        android:text="..."
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/description"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"/>

    <io.digibyte.presenter.customviews.BRText
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/NodeSelector.statusLabel"
        android:textColor="@color/light_gray"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/node_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/node_text"/>

    <io.digibyte.presenter.customviews.BRText
        android:id="@+id/node_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.3"
        android:text="..."
        android:textColor="@color/almost_black"
        android:textSize="@dimen/sub_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13"/>

    <io.digibyte.presenter.customviews.BRButton
        android:id="@+id/button_switch"
        android:layout_width="0dp"
        android:layout_height="@dimen/big_button_height"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:elevation="8dp"
        android:padding="10dp"
        android:text="@string/NodeSelector.manualButton"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:buttonType="1"
        app:isBreadButton="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/node_status"/>


</android.support.constraint.ConstraintLayout>
